{
  "name": "market-health",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "npm run dev -w @market-health/api",
    "dev:web": "npm run dev -w @market-health/web",
    "build:api": "npm run build -w @market-health/api",
    "build:web": "npm run build -w @market-health/web",
    "build:api-core": "npm run build -w @market-health/api-core",
    "build": "npm run build:api && npm run build:web",
    "docker:up": "docker compose up -d postgres redis",
    "docker:down": "docker compose down"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "express": "^4.18.2",
    "serverless-http": "^3.2.0",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@netlify/functions": "^2.8.0"
  }
}